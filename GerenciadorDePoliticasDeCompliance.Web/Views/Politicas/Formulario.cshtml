@model GerenciadorDePoliticasDeCompliance.Web.Models.Politicas.FormularioViewModel
@{
    ViewData["Title"] = "Política de Compliance";
}


@if (Model.Id != 0)
    {
<form class="form-horizontal" action="/politicas/salvar" method="post">
    <fieldset>
        <legend>@ViewData["Title"]</legend>
        <div class="form-group">
            <input type="hidden" value="@Model.Id" name="Id" />
            <label for="inputTitulo" class="col-lg-2 control-label"></label>
            <div class="col-lg-10">
                <input type="text"  required class="form-control" value="@Model.Titulo" name="Titulo" id="inputTitulo" placeholder="Titulo"/>
            </div>
        </div>



        <div class="form-group">
            <label for="textArea" class="col-lg-2 control-label"></label>
            <div class="col-lg-10">
                <input class="form-control" required rows="15" value="@Model.Texto" id="textArea" name="Texto" placeholder="Preencha com a Política de Compliance"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancelar</button>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
        </div>
    </fieldset>
</form>

}