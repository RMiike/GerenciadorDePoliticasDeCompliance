@model GerenciadorDePoliticasDeCompliance.Web.Models.Politicas.FormularioViewModel
@{
    ViewData["Title"] = "Política de Compliance";
}

<section>
    <section class="container-fluid col-xl-9 justify-content-center h-100 ">
        <section class="form-container shadow-lg" class="col-12 col-sm-6 col-md-3">
            <form class="form-horizontal" action="/politicas/salvar" method="post">
                <fieldset class="h-100">
                    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
                    <div class="form-group">
                        <input type="hidden" value="@Model.Id" name="Id" />
                        <label for="inputTitulo" class="col-lg-2 control-label"></label>
                        <div class="col-lg-12 ">
                            <input type="text" required class="form-control" value="@Model.Titulo" name="Titulo" id="inputTitulo" placeholder="Titulo" />
                        </div>
                    </div>
                    <div class="form-group mb-4">
                        <div class="col-lg-12">
                            <textarea class="form-control" required rows="15" id="textArea" name="Texto" value="@Model.Texto" placeholder="Preencha com a Política de Compliance">@Model.Texto</textarea>
                        </div>
                    </div>
                    <div class="col-lg-12 col-lg-offset-2 mb-4">
                        <a asp-controller="Politicas" asp-action="Index" class="btn btn-default">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </fieldset>
            </form>
        </section>
    </section>
</section>