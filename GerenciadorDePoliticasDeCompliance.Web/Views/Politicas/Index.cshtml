@model GerenciadorDePoliticasDeCompliance.Web.Models.Politicas.ListaViewModel
@{
    ViewData["Title"] = "Políticas de Compiance da Wiz";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form class="px-4 py-3">
            <p><a asp-action="Formulario" class="btn btn-primary">Adicionar</a></p>

        </form>
        <table class="table table-striped table-hover">
            <thead>
                @if (Model.Politicas.Count() == 0)
                {
                    <h1>Não há políticas!!</h1>
                }
                else
                {
                    <tr class="bg-dark">
                        <th>
                            Título

                        </th>

                        <th>
                            Data
                        </th>
                        <td>
                        </td>
                        <td>
                        </td>
                    </tr>


                    @foreach (var item in Model.Politicas)
                    {
                        <tr>
                            <td>
                                <a href="/Politicas/Detalhes/@item.Id">
                                    @Html.DisplayFor(modelitem => item.Titulo)
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.Data)
                            </td>
                            <td>
                                <a href="/Politicas/edicao/@item.Id" class="btn btn-primary">Editar</a>
                            </td>
                            <td>
                                <a href="/Politicas/deletar/@item.Id" class="btn btn-danger">Deletar</a>
                            </td>


                        </tr>
                    }
                }
            </thead>
        </table>
    </div>
</div>

