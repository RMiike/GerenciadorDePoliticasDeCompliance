@model GerenciadorDePoliticasDeCompliance.Web.Models.Politicas.ListaViewModel
@{
    ViewData["Title"] = "Políticas de Compiance da Wiz";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">

        <table class="table table-striped table-hover">
            <thead>
                <tr class="bg-dark">
                    <th>
                        Título

                    </th>

                    <th>
                        Data
                    </th>

                </tr>
                @foreach (var item in Model.Politicas)
                {
                    <tr>
                        <td>
                            <a href="/Politicas/Detalhes/@item.Id">
                                @Html.DisplayFor(modelitem => item.Titulo)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.Data)
                        </td>

                    </tr>
                }
            </thead>
        </table>
    </div>
</div>
<form class="px-4 py-3">
    <p><a asp-action="Formulario" class="btn btn-primary">Adicionar</a></p>
</form>
