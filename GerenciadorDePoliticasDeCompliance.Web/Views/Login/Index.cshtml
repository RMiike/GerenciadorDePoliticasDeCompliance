
@{
    ViewData["Title"] = "Wiz";
}


<div >
    <form class="px-4 py-3" action="/login/acesso" method="post">
        <div class="form-group">
            <label for="exampleDropdownFormEmail1">Login</label>
            <input type="email" class="form-control" required id="exampleDropdownFormEmail1" placeholder="email@example.com">
        </div>
        <div class="form-group">
            <label for="exampleDropdownFormPassword1">Senha</label>
            <input type="password" class="form-control" required id="exampleDropdownFormPassword1" placeholder="Senha">

        </div>
        <div class="form-group">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="dropdownCheck">
                <label class="form-check-label" for="dropdownCheck">
                    Lembrar senha
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Entrar</button>
    </form>
    <div class="dropdown-divider"></div>
    <a class="dropdown-item" href="../Funcionarios/Formulario">Cadastre-se</a>
 
</div>