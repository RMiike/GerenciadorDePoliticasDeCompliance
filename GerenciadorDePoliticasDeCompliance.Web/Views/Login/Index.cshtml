@model GerenciadorDePoliticasDeCompliance.Web.Models.Login.LoginViewModel;
@{
    ViewData["Title"] = "Wiz";
}

<br />
<br />
<div>
    <form class="px-4 py-3" action="/login/acessar" id="formLogin" method="post">
        <div class="form-group">

            <label for="exampleDropdownFormEmail1">Login</label>
            <input type="email" class="form-control" required id="Email" name="Email" placeholder="email@example.com">
        </div>
        <div class="form-group">
            <label for="exampleDropdownFormPassword1">Senha</label>
            <input type="password" class="form-control" required id="Senha" name="Senha" placeholder="Senha">
            @ViewData["UsuarioInvalido"]
        </div>
        <div class="form-group">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="dropdownCheck">
                <label class="form-check-label" for="dropdownCheck">
                    Lembrar senha
                </label>
            </div>
        </div>
        <input type="submit" class="btn btn-primary" value="acessar" />
    </form>
    <div class="dropdown-divider"></div>
    <a class="dropdown-item" href="../Funcionarios/Formulario">Cadastre-se</a>

</div>