@model GerenciadorDePoliticasDeCompliance.Web.Models.Funcionarios.ListaViewModel;
@{
    ViewData["Title"] = "Lista de Funcionários";
}


<h1>@ViewData["Title"]</h1>




<div class="row">
    <div class="col-md-4">
        <form class="px-4 py-3">
            <p><a asp-action="Formulario" class="btn btn-primary">Adicionar</a></p>

        </form>
        <table class="table table-striped table-hover">
            <thead>
                @if (Model.Funcionarios.Count() == 0)
                {
                    <h1>Não há funcionários cadastrados!</h1>
                }
                else
                {
            <tr class="bg-dark">
                <th>
                    Nome

                </th>

                <th>
                    CPF
                </th>
                <th>
                    Email
                </th>
                <th>
                    Matricula
                </th>
            </tr>


                    @foreach (var item in Model.Funcionarios)
                    {
            <tr>
                <td>
                    @Html.DisplayFor(modelitem => item.Nome)

                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.CPF)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Matricula)
                </td>

            </tr>
                    }
                }
            </thead>
        </table>
    </div>
</div>

