@model GerenciadorDePoliticasDeCompliance.Web.Models.Funcionarios.ListaViewModel;
@{
    ViewData["Title"] = "Lista de Funcionários";
}

<section>
    <section class="container-fluid col-xl-9 justify-content-center h-100 ">

        <section class="form-container shadow-lg" class="col-12 col-sm-6 col-md-3" style="border-radius:6px">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <div>
                <table class="table table-striped table-hover">
                    <thead>
                        @if (Model.Funcionarios.Count() == 0)
                        {
                            <div class="alert alert-danger text-center" role="alert" >
                                Não há lista de funcionários!
                            </div>
                        }
                        else
                        {
                            <tr class="bg-info col-lg-12">
                                <th class="text-center">
                                    Nome
                                </th>
                                <th class="text-center">
                                    CPF
                                </th>
                                <th class="text-center">
                                    Email
                                </th>
                                <th class="text-center">
                                    Matricula
                                </th>
                            </tr>
                            @foreach (var item in Model.Funcionarios)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelitem => item.Nome)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelitem => item.CPF)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelitem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelitem => item.Matricula)
                                    </td>
                                </tr>
                            }
                        }
                    </thead>
                </table>
            </div>
        </section>
    </section>
</section>

