@model GerenciadorDePoliticasDeCompliance.Web.Models.Politicas.ListaViewModel;

@{
    ViewData["Title"] = "Políticas Assinadas";
}
<section>
    <section class="container-fluid col-xl-9 justify-content-center h-100 mb-4 ">
        <section class="form-container shadow-lg" class="col-12 col-sm-6 col-md-3 " style="border-radius:6px">
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>
            <div>
                <div>
                    <table class="table table-striped table-hover">
                        <thead>
                            @if (Model.Politicas.Count() == 0)
                            {
                            <div class="alert alert-danger text-center" role="alert">
                                Não há políticas assinadas!
                            </div>
                            }
                            else
                            {
                                <tr class="bg-info col-lg-12">
                                    <th class="text-center">
                                        Título

                                    </th>

                                    <th class="text-center">
                                        Data
                                    </th>
                                </tr>
                                @foreach (var item in Model.Politicas)
                                {
                                    <tr>
                                        <td>
                                            <a href="/Home/Detalhes/@item.Id">
                                                @Html.DisplayFor(modelitem => item.Titulo)
                                            </a>

                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelitem => item.Data)
                                        </td>
                                    </tr>
                                }
                            }
                        </thead>
                    </table>
                </div>
            </div>
            <p class="text-center">
                <a href="/Home/Index" class="btn btn-primary mb-4">Retornar</a>
            </p>
        </section>
    </section>
</section>  