@model GerenciadorDePoliticasDeCompliance.Web.Models.Politicas.ListaViewModel;

@{
    ViewData["Title"] = "Políticas de Compiance da Wiz";
}


<section>
    <section class="container-fluid col-xl-9 justify-content-center h-100 ">
      
        <section class="form-container shadow-lg" class="col-12 col-sm-6 col-md-3">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <div>
                <div>

                    <table class="table table-striped table-hover">
                        <thead>
                            @if (Model.Politicas.Count() == 0)
                            {
                                <h1>Não há politicas</h1>
                            }
                            else
                            {
                                <tr class="bg-dark col-lg-12">
                                    <th>
                                        Título

                                    </th>

                                    <th>
                                        Data
                                    </th>
                                </tr>


                                @foreach (var item in Model.Politicas)
                                {

                                    <tr>
                                        <td>
                                            <a href="/Home/Detalhes/@item.Id">
                                                @Html.DisplayFor(modelitem => item.Titulo)
                                            </a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelitem => item.Data)
                                        </td>

                                    </tr>
                                }



                            }


                        </thead>
                    </table>
                </div>
            </div>
            <a href="/Home/Assinados" class="btn btn-primary">Formulários Assinados</a>
        </section>
    </section>
</section>  